# Copy this to .env and fill in with real values.

# ── Database ──
PS_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/promptshield_licensing

# ── JWT ──
PS_JWT_SECRET=CHANGE_ME_TO_A_RANDOM_64_CHAR_STRING
